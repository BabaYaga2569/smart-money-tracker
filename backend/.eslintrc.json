{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-use-before-define": ["error", { "variables": true }],
    "block-scoped-var": "error",
    "no-unused-catch-bindings": "error",
    "prefer-promise-reject-errors": "error",
    "no-console": ["warn", { "allow": ["error"] }],
    "no-var": "error",
    "prefer-const": "error",
    "no-shadow": "error"
  }
}